	issn = {0142-727X},
	journal = {International journal of Heat and Fluid Flow},
	keywords = {Annulus, Slug flow, volume of fluid, Reynolds-averaged Navier--Stokes equations},
	pages = {108437},
	title = {Gas--liquid slug flow in a horizontal concentric annulus, a comparison of numerical simulations and experimental data},
